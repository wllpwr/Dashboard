<resources>
    <!-- Base application theme. -->
    <style name="ThemeBlackRoboto" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ThemeBlackRobotoMono" parent="ThemeBlackRoboto">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>

    <style name="ThemeBlueRoboto" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ThemeBlueRobotoMono" parent="ThemeBlueRoboto">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>

    <style name="ThemeNordRoboto">
        <item name="colorPrimary">@color/polar4</item>
        <item name="colorOnPrimary">@color/snow2</item>
        <item name="colorSecondary">@color/aurora1</item>
        <item name="colorOnSecondary">@color/snow2</item>
        <item name="android:statusBarColor">@color/polar4</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:colorBackground">@color/snow3</item>
    </style>

    <style name="ThemeNordRobotoMono" parent="ThemeNordRoboto">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>

    <style name="ThemeSolarizedLightRoboto">
        <item name="colorPrimary">@color/base2</item>
        <item name="colorOnPrimary">@color/base03</item>
        <item name="colorSecondary">@color/base0</item>
        <item name="colorOnSecondary">@color/base03</item>
        <item name="android:statusBarColor">@color/base0</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:colorBackground">@color/base3</item>
    </style>

    <style name="ThemeSolarizedRobotoMono" parent="ThemeSolarizedLightRoboto">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>

    <style name="ThemeArcRoboto">
        <item name="colorPrimary">@color/arc1</item>
        <item name="colorOnPrimary">@color/arcWhite</item>
        <item name="colorSecondary">@color/arc4</item>
        <item name="colorOnSecondary">@color/arcWhite</item>
        <item name="android:statusBarColor">@color/arc1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:colorBackground">@color/arcWhite</item>
    </style>

    <style name="ThemeArcRobotoMono" parent="ThemeArcRoboto">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>
</resources>